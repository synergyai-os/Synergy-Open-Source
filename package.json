{
	"name": "synergyos",
	"private": true,
	"version": "0.1.0",
	"description": "Open Source Knowledge Retention System - Transform content into actionable knowledge",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:mobile": "NODE_ENV=development vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:unit:server": "vitest --run --project=server",
		"test": "npm run test:unit:server && npm run test:e2e",
		"test:e2e": "playwright test"
	},
