{
	"name": "synergyos",
	"private": false,
	"version": "0.1.0",
	"description": "Open Source Knowledge Retention System - Transform content into actionable knowledge",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:test": "vite dev --mode test",
		"dev:mobile": "NODE_ENV=development vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky || true",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:unit:server": "vitest --run --project=server",
		"test:integration": "vitest --run tests/convex/integration",
		"test:integration:watch": "vitest tests/convex/integration",
		"test": "npm run test:unit:server && npm run test:integration && npm run test:e2e",
		"test:e2e": "npm run test:e2e:stop-dev && E2E_TEST_MODE=true playwright test",
		"test:e2e:setup": "playwright test e2e/auth.setup.ts",
		"test:e2e:quick-create": "playwright test e2e/quick-create.spec.ts",
		"test:e2e:settings": "playwright test e2e/settings-security.spec.ts",
		"test:e2e:inbox": "playwright test e2e/inbox-workflow.spec.ts",
		"test:e2e:auth": "npm run test:e2e:stop-dev && E2E_TEST_MODE=true playwright test e2e/auth-security.test.ts e2e/auth-registration.test.ts",
		"test:e2e:stop-dev": "lsof -ti:5173 | xargs kill -9 2>/dev/null || true",
		"test:e2e:critical": "playwright test e2e/quick-create.spec.ts e2e/settings-security.spec.ts e2e/inbox-workflow.spec.ts",
		"test:sessionid": "./scripts/check-sessionid-usage.sh",
		"precommit": "npm run check && npm run test:sessionid && npm run lint && npm run test:unit:server && npm run test:integration",
		"ci:local": "npm run check && npm run lint && npm run test:unit:server && npm run test:integration && npm run test:e2e && npm run build"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/adapter-vercel": "^6.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.14",
		"@types/dompurify": "^3.0.5",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.4",
		"convex-test": "^0.0.38",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"mdsvex": "^0.12.6",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"shiki": "^3.15.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"dependencies": {
		"@capacitor/android": "^7.4.4",
		"@capacitor/cli": "^7.4.4",
		"@capacitor/core": "^7.4.4",
		"@capacitor/ios": "^7.4.4",
		"@convex-dev/resend": "^0.1.13",
		"@convex-dev/workos": "^0.0.1",
		"@workos-inc/authkit-js": "^0.14.0",
		"@workos/authkit-sveltekit": "^0.0.1-alpha.0",
		"bits-ui": "^2.14.1",
		"convex": "^1.28.0",
		"convex-svelte": "^0.0.11",
		"dompurify": "^3.3.0",
		"highlight.js": "^11.11.1",
		"layerchart": "^1.0.12",
		"lowlight": "^3.3.0",
		"marked": "^17.0.0",
		"posthog-js": "^1.289.0",
		"posthog-node": "^5.11.2",
		"prosemirror-commands": "^1.7.1",
		"prosemirror-highlight": "^0.13.0",
		"prosemirror-history": "^1.4.1",
		"prosemirror-inputrules": "^1.5.1",
		"prosemirror-keymap": "^1.2.3",
		"prosemirror-markdown": "^1.13.2",
		"prosemirror-model": "^1.25.4",
		"prosemirror-schema-basic": "^1.2.4",
		"prosemirror-schema-list": "^1.5.1",
		"prosemirror-state": "^1.4.4",
		"prosemirror-view": "^1.41.3",
		"resend": "^6.4.0",
		"svelte-sonner": "^1.0.6",
		"ts-fsrs": "^5.2.3"
	},
	"lint-staged": {
		"*.{js,ts,svelte,json,md,css,html}": [
			"prettier --write"
		]
	}
}
